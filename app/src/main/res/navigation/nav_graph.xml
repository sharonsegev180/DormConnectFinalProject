<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/logInFragment">

    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.dormconnectapp.ui.auth.LogInFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_logInFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/logInFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_logInFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.dormconnectapp.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.dormconnectapp.ui.feed.Feedfragment"
        android:label="Feed">
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.dormconnectapp.ui.chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/noticeBoardFragment"
        android:name="com.example.dormconnectapp.ui.notice.NoticeBoardFragment"
        android:label="Notice Board"
        tools:layout="@layout/fragment_notice_board" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.dormconnectapp.ui.auth.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register" >
    <action
        android:id="@+id/action_registerFragment_to_homeFragment"
        app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.dormconnectapp.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />



</navigation>